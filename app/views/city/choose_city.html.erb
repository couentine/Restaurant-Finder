<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Choose a City</h4>
            </div>
            <%= form_tag(get_city_path, method: "get") do %>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <%= label_tag "City" %>
                                <%= select_tag(:city_id, options_from_collection_for_select(@cities, "id", "name"),{prompt:"Select a City" , class: 'form-control'}) %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <%= submit_tag "Enter", class: 'btn btn-success' %>
                </div>
            <% end %>
        </div>
    </div>
</div>
