<div class="col-md-4">
    <%= form_tag(root_path, method: "get") do %>
    <div class="input-group">
        <% if action == "zone" %>
            <%= select_tag(:zones, options_from_collection_for_select(@zones, "id", "name"),{prompt:"Select Zone" , class: 'form-control'}) %>
        <% elsif action == "restaurant"%>
             <%= text_field_tag(:query, nil, {class: 'form-control', placeholder: "
Search for Restaurant"}) %>
        <% else %>
            <%= select_tag(:specialties, options_from_collection_for_select(@specialties, "id", "name"),{prompt:"Select Specialty" , class: 'form-control'}) %>
        <% end %>
        <%= submit_tag("Search", class: "btn btn-default") %>
    </div>
    <% end %>
</div>
